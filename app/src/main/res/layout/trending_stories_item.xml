<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_180sdp"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RL_ViewStory">



        <ImageView
            android:id="@+id/IV_Story"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/bg_round_green"
            android:scaleType="centerCrop"
            android:src="@drawable/movie" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/storyType"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/IV_Story"
           android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Muhammad Touseeq"
                android:textSize="14sp"
                android:gravity="start"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:id="@+id/txtUserName"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:src="@drawable/clap_icon" />

            <TextView
                android:id="@+id/clapCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:src="@drawable/views_icon" />

            <TextView
                android:id="@+id/viewsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"

            android:layout_alignParentTop="true"
            android:src="@drawable/marker_thinking_boy"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>