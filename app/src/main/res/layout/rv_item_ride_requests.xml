<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:elevation="10dp"
    android:clipToPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_foreground"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    ​

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:background="@drawable/circle_white_bg"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
 />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/imgProfile"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:hint="Ali Ahmed"
            android:textColor="#000"
            android:textSize="16sp" />
        ​

        <TextView
            android:id="@+id/txtDesignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif"
            android:paddingEnd="16dp"
            android:text="Software Engineer TPL"
            android:textColor="#BDBDBD"
            android:textSize="13sp"
            android:visibility="visible" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />
        ​
    </LinearLayout>
    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_baseline_delete_forever_24" />

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_source_destination"
            android:layout_height="@dimen/_30sdp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Gulshan Iqbal Karachi"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Nipa Karachi"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Today, 12:15 PM"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtSeats"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:text="Seats 3"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:padding="5dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_call_24"
            android:layout_height="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:text="Accept"
            android:id="@+id/btnRequest"
            android:textSize="10sp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="end"
            android:layout_height="30dp"/>

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>